<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#212b31"
    android:layout_height="match_parent"
    tools:context=".ChooseSubjects">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choosemsg"
        android:gravity="center"
        android:text="TAP TO CHOOSE YOUR SUBJECTS"
        android:padding="6dp"
        android:textSize="20dp"
        android:textColor="#ffffff"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/subjects_to_choose"
        android:clickable="true"
        android:layout_below="@+id/choosemsg"
        android:background="#212b31"
        android:layout_marginBottom="60dp"
        android:focusable="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:padding="4dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/save"
        android:text="  SAVE SUBJECTS  "
        android:textColor="#ffffff"
        android:layout_marginBottom="4dp"
        android:background="@drawable/buttons_colorprimary_bg"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progress_circular"/>


</RelativeLayout>